<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ExamREST.FirstSectionExamItemPage"
    Title="Exam">
    <StackLayout Margin="20"
        VerticalOptions="StartAndExpand">
        <Label Text="{Binding Path=DisplayText}" />
        <Switch x:Name="doneSwitch"
            PropertyChanged="Handle_PropertyChanged" />
        <Label Text="Name"
            IsVisible="{Binding Path=ShouldDisplayData}" />
        <Entry IsEnabled="false"
            IsVisible="{Binding Path=ShouldDisplayData}"
            Text="{Binding Path=ExamItem.Name}" />
        <Label Text="Type"
            IsVisible="{Binding Path=ShouldDisplayData}" />
        <Entry IsEnabled="false"
            IsVisible="{Binding Path=ShouldDisplayData}"
            Text="{Binding Path=ExamItem.Type}" />
        <Label Text="Power"
            IsVisible="{Binding Path=ShouldDisplayData}" />
        <Entry IsEnabled="false"
            IsVisible="{Binding Path=ShouldDisplayData}"
            Text="{Binding Path=ExamItem.Power}" />
    </StackLayout>
</ContentPage>