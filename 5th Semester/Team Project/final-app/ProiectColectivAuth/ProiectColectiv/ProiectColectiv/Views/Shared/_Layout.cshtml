	</div>

	<!-- Scripts -->
	<script src="~/assets/js/jquery.min.js"></script>
	<script src="~/assets/js/jquery.scrolly.min.js"></script>
	<script src="~/assets/js/jquery.dropotron.min.js"></script>
	<script src="~/assets/js/jquery.scrollex.min.js"></script>
	<script src="~/assets/js/browser.min.js"></script>
	<script src="~/assets/js/breakpoints.min.js"></script>
	<script src="~/assets/js/util.js"></script>
	<script src="~/assets/js/main.js"></script>
	<script type="text/javascript">




		$(document).ready(function () {


		if (localStorage.getItem('user') != null) {
			if (localStorage.getItem('role') === 'Teacher') {
                var string = '<ul>';
                string += '<li><a class="link depth-0" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0);text-decoration:none" href="http://ubbacademicinfo.azurewebsites.net/home/addSubject/"> Add Subject </a></li>';
                string += '<li><a class="link depth-0" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0);text-decoration:none" href="http://ubbacademicinfo.azurewebsites.net/home/subjectsAssign/' + localStorage.getItem('id') + '"> Assign Subject </a></li>'
                string += '<li><a class="link depth-0" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0);text-decoration:none" href="http://ubbacademicinfo.azurewebsites.net/home/subjects/' + localStorage.getItem('id') + '"> Attendance</a></li>'
				string += '		<li><a id="signOut" class="button primary">Sign out</a></li></ul>';
				$('#nav').empty();
                $('#nav').append(string);
                $('#navPanel nav').append(string);

			}
			else {
				var string = '<ul>';
                string += '<li><a class="link depth-0" style="-webkit-tap-highlight-color: rgba(0, 0, 0, 0);text-decoration:none" href="http://ubbacademicinfo.azurewebsites.net/home/student/' + localStorage.getItem('id') + '"> My Attendances </a></li>'
				string += '		<li><a id="signOut" class="button primary">Sign out</a></li></ul>';
				$('#nav').empty();
                $('#nav').append(string);
                $('#navPanel nav').append(string);

			}
		}
		else {
                if (window.location != "http://ubbacademicinfo.azurewebsites.net/Home/Login")
                    if (window.location != "http://ubbacademicinfo.azurewebsites.net/Home/Register")
				            window.location = "http://ubbacademicinfo.azurewebsites.net/Home/Login";
			}

			$('#signOut').click(function (e) {
				localStorage.removeItem('user');
				localStorage.removeItem('role');
				localStorage.removeItem('id');
				window.location = "http://ubbacademicinfo.azurewebsites.net/Home";
			});
	});


	</script>

</body>
</html>