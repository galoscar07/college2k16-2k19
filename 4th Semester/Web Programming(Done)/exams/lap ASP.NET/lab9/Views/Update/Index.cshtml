@model lab9.Models.Destination

@{if(Session["UserName"] != null) {
    ViewBag.Title = "Update a Destination";
    <br>
        using (Html.BeginForm("Index", "Update", FormMethod.Post))  
        {   
        <fieldset>
	        <input name="id" value="@Model.Id" hidden>
            City: <br> <input type="text" name="city" value="@Model.City" required> <br><br>
            Country: <br> <input type="text" name="country" value="@Model.Country" required> <br><br>
            Description: <br> <input type="text" name="description" value="@Model.Description" required> <br><br>
            Tourist Target: <br> <input type="text" name="tourist" value="@Model.Tourist" required> <br><br>
            Cost: <br> <input type="text" name="cost" value="@Model.Cost" > <br><br>
            <input type="submit" name="submit" value="Update destination">
        </fieldset>
         }
          <br>
          if(Session["Error"] != null)
          {
            <text>Error: @Session["Error"].ToString()</text>
            Session["Error"] = null;
          }
     }
}