@model lab9.Models.Destination

@{if(Session["UserName"] != null) {
    ViewBag.Title = "Add a Destination";
    <br>
        using (Html.BeginForm("Index", "Add", FormMethod.Post))  
        {   
    <fieldset>
        City: <br> <input type="text" name="city" > <br><br>
        Country: <br> <input type="text" name="country" > <br><br>
        Description: <br> <input type="text" name="description" > <br><br>
        Tourist Target: <br> <input type="text" name="tourist"> <br><br>
        Cost: <br> <input type="text" name="cost"> <br><br>
        <input type="submit" name="submit" value="Add destination">
    </fieldset>
         }
          <br>
          if(Session["Error"] != null)
          {
            <text>Error: @Session["Error"].ToString()</text>
	        Session["Error"] = null;
          }
     }
}